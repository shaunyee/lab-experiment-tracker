<div class="container blue darken-4">
  <div class="row">

    <%= form_for [commentable, comment]  do |f| %>

      <div class="col s12">
        <div class="row">
          <div class="input-field col s12">
              <%= f.label :body %>
              <%= f.text_field :body %><br />
            </div>
          </div>
          <%= submit_tag "Submit", :class => "waves-effect waves-light btn" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
